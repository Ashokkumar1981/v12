<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit <%=car.name%></h1>    
        
        <div style="width:30%;margin:25px auto;">
            
            <form action="/cars/<%=car._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="car[name]" value = <%= car.name%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="car[price]"  value="<%= car.price%>" min="100" step="50">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="car[image]"  value = <%= car.image%>>
                </div>
                <div class="form-group">
                    <textarea  class="form-control" type="text" name="car[description]" rows="3"><%= car.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a href="/cars">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>